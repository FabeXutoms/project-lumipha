// schema.prisma dosyasında
generator client {
  provider = "prisma-client-js"
}

datasource db {
  // Burayı PostgreSQL olarak değiştiriyoruz
  provider = "postgresql" 
  // Veritabanı bağlantı adresi .env dosyasından çekilecek
  url      = env("DATABASE_URL") 
}

// client.id ile diğer tablolarda ilişki kurarken kullanılacak model
model Client {
  id        Int      @id @default(autoincrement())
  name      String   @db.VarChar(255)
  email     String   @unique @db.VarChar(255)
  otpCode      String?   @map("otp_code")       // Doğrulama Kodu
  otpExpiresAt DateTime? @map("otp_expires_at") // Kodun son kullanma tarihi
  previousOtpCode      String?   @map("previous_otp_code")       // Önceki Doğrulama Kodu
  previousOtpExpiresAt DateTime? @map("previous_otp_expires_at") // Önceki Kodun son kullanma tarihi
  phone     String?  @db.VarChar(50)
  createdAt DateTime @default(now()) @map("created_at")

  // İlişki: Bir Client'ın birden çok Proje Hareket kaydı olabilir
  projectActions ProjectAction[]

  @@map("clients") // Veritabanındaki tablo adı
}

// Proje hareketlerini ve takip kodunu tutan model
model ProjectAction {
  id                    Int      @id @default(autoincrement())
  clientId              Int      @map("client_id")
  trackingCode          String   @unique @db.VarChar(20) @map("tracking_code")
  packageName           String   @db.VarChar(255) @map("package_name")
  totalAmount           Decimal  @db.Decimal(10, 2) @map("total_amount")
  status                Status   @default(Pending)
  startDate             DateTime @db.Date @map("start_date")
  estimatedEndDate      DateTime? @db.Date @map("estimated_end_date")
  companyName           String?  @map("company_name")   // İşletme Adı
  businessType          String?  @map("business_type")  // İşletme Türü
  businessScale         String?  @map("business_scale") // İşletme Ölçeği
  // --- YENİ EKLENEN ALAN ---
  projectLink           String?   @map("project_link") // Link boş olabilir (?)
  // -------------------------

  client                Client    @relation(fields: [clientId], references: [id])
  payments              Payment[]

  @@map("project_actions")
}

// Ödemeleri tutan model
model Payment {
  id                Int      @id @default(autoincrement())
  projectActionId   Int      @map("project_action_id")
  amount            Decimal  @db.Decimal(10, 2)
  paymentDate       DateTime @default(now()) @map("payment_date")
  paymentMethod     String?  @db.VarChar(100) @map("payment_method")
  transactionId     String   @unique @db.VarChar(255) @map("transaction_id")

  // İlişki: Bu Payment, hangi ProjectAction'a ait?
  projectAction     ProjectAction @relation(fields: [projectActionId], references: [id])

  @@map("payments")
}

// Durumlar için PostgreSQL ENUM tanımı
enum Status {
  WaitingForApproval @map("Onay Bekliyor") // <-- YENİ EKLENEN DURUM
  Pending            @map("Beklemede")     // Artık "Ödeme Bekleniyor" olarak kullanacağız
  InProgress         @map("Devam Ediyor")
  Completed          @map("Tamamlandı")
  Cancelled          @map("İptal Edildi")
  
  @@map("project_status")
}